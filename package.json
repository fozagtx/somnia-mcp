{
  "name": "@somnia/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Somnia MCP Server and Agent Monorepo",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "mcp:build": "pnpm --filter @somnia/mcp-server build",
    "mcp:start": "pnpm --filter @somnia/mcp-server start",
    "mcp:dev": "pnpm --filter @somnia/mcp-server dev",
    "agent:build": "pnpm --filter @somnia/agent build",
    "agent:start": "pnpm --filter @somnia/agent start",
    "agent:dev": "pnpm --filter @somnia/agent dev",
    "agent:chat": "pnpm --filter @somnia/agent chat",
    "agent:interactive": "pnpm --filter @somnia/agent interactive",
    "start": "pnpm build && pnpm agent:chat",
    "chat": "pnpm agent:chat"
  },
  "keywords": [
    "somnia",
    "blockchain",
    "mcp",
    "agent",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
